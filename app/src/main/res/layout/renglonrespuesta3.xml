<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="390dp"
    android:layout_height="360dp"
    android:orientation="vertical"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/contenedor">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="305dp"
           >

            <Button
                android:id="@+id/retorno"
                android:layout_width="25dp"
                android:layout_height="21dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/retorno"

                />

            <Button
                android:layout_width="24dp"
                android:layout_height="21dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/megusta"
                android:id="@+id/btn_like"
                />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:id="@+id/foto"
            android:src="@drawable/fotopordefecto"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre usuario"
                android:id="@+id/tv_nombre"
                android:textSize="16dp"
                android:textStyle="bold"
                android:textColor="#EE5514"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp" />


        </LinearLayout>



    </LinearLayout>

    <android.support.constraint.ConstraintLayout
        android:layout_width="354dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_height="100dp"
        android:background="@drawable/respondida">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/name"
        android:textColor="@color/colorIcono"
        android:text="Nombre del usuario"
        android:textStyle="bold"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
       />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/preguntarespondida"
                android:textColor="#5D5D5D"
                android:text="preguntarespondia"
                android:textStyle="normal"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                />

        </LinearLayout>

    </android.support.constraint.ConstraintLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:text="kmfwevmwvmwpvmwmvwmvpwmvpwmvmwvvnwvnwnvwvwnvpwnvpnwvpwnvvnwppnvwnvnvpwnvpwv"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">


        <ImageView
            android:layout_width="16dp"
            android:layout_height="14dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/like" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/tv_like"
            android:text="1"/>

        <ImageView
            android:layout_width="10dp"
            android:layout_height="14dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/boomerang"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="10dp"
            android:text="1"
            android:id="@+id/tv_respuestas"/>

        <ImageView
            android:layout_width="23dp"
            android:layout_height="14dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/time" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/tv_time"
            android:text="1"/>


    </LinearLayout>

</LinearLayout>