<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="390dp"
    android:layout_height="148dp"
    android:orientation="vertical"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/contenedor"
    >





    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="300dp"
        >



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="3">

            <Button
                android:id="@+id/retorno"
                android:layout_width="25dp"
                android:layout_height="21dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/retorno"

                />

            <Button
                android:layout_width="24dp"
                android:layout_height="21dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/megusta"
                android:id="@+id/btn_like"
                />
        </LinearLayout>






    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:id="@+id/foto"
            android:src="@drawable/fotopordefecto"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AnÃ³nimo"
                android:id="@+id/tv_nombre"
                android:textSize="16dp"
                android:textStyle="bold"
                android:textColor="#EE5514"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="hi"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="#5D5D5D"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:id="@+id/tv_pregunta"
                />
        </LinearLayout>



    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <ImageView
            android:layout_width="16dp"
            android:layout_height="14dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/like" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/tv_like"
            android:text="1"/>

        <ImageView
            android:layout_width="10dp"
            android:layout_height="14dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/boomerang"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="10dp"
            android:text="1"
            android:id="@+id/tv_respuestas"/>

        <ImageView
            android:layout_width="23dp"
            android:layout_height="14dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/time" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/tv_time"
            android:text="1"/>


    </LinearLayout>

    <icesi.dmi.com.finalecosistemas.ExpandableHeightListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="40dp"
        android:id="@+id/lv_respondidas">



    </icesi.dmi.com.finalecosistemas.ExpandableHeightListView>


</LinearLayout>